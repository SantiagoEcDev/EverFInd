<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <title>EverFind admin</title>
    <link rel="stylesheet" href="./styles/admin.css">
    <link rel="stylesheet"
        href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
</head>

<body>

    <input type="checkbox" id="menu-toggle">
    <div class="sidebar">
        <div class="side-header">
            <h3>A<span>dmin</span></h3>
        </div>

        <div class="side-content">
            <div class="profile">
                <div class="profile-img bg-img" style="background-image: url(img/3.jpeg)"></div>
                <h4>Santiago Escobar</h4>
                <small>Administrador</small>
            </div>

            <div class="side-menu">
                <ul>
                    <li>
                        <a href="admin">
                            <span class="las la-home"></span>
                            <small>Inicio</small>
                        </a>
                    </li>
                    <li>
                        <a href="history">
                            <span class="las la-history"></span>
                            <small>Historial</small>
                        </a>
                    </li>
                    <li>
                        <a href="petitions" class="active">
                            <span class="las la-envelope"></span>
                            <small>Solicitudes</small>
                        </a>
                    </li>
                    <li>
                        <a href="pets">
                            <span class="las la-paw"></span>
                            <small>Mascotas</small>
                        </a>
                    </li>
                    <li>
                        <a href="logout">
                            <span class="las la-sign-out-alt"></span>
                            <small>Cerrar sesi칩n</small>
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </div>

    <div class="main-content">


        <header>
            <div class="header-content">
                <label for="menu-toggle">
                    <span class="las la-bars"></span>
                </label>

                <div class="header-menu">

                    <div class="notify-icon">
                        <span class="las la-envelope" id="mailIcon"></span>
                        <span class="notify" id="mailCount">4</span>
                    </div>

                    <div class="notify-icon">
                        <span class="las la-bell" id="notificationIcon"></span>
                        <span class="notify" id="notificationCount">3</span>
                    </div>

                    <div class="user">
                        <div class="bg-img" style="background-image: url(./assets/img/feed/dogFeed.png)"></div>

                        
                    </div>
                </div>
            </div>
        </header>


        <main>

            <div class="page-header">
                <h1>Panel de control</h1>
                <small>Inicio / Panel</small>
            </div>

            <div id="petInfoModal" class="modal">
                <!-- Contenido del Modal -->
                <div class="petModal">
                    <span class="close" id="closePetModal">&times;</span>
                    <div class="carousel">
                        <div class="carousel-images">
                            <img src="./assets/img/feed/dogFeed.png" alt="Imagen 1">
                            <img src="./assets/img/carnet.jpg" alt="Imagen 2" style="display: none;">
                        </div>
                        <button class="carousel-button prev" onclick="changeImage(-1)">&#10094;</button>
                        <button class="carousel-button next" onclick="changeImage(1)">&#10095;</button>
                    </div>
                    
                    <div class="petName">Hannah</div>
                    <div class="petAge">Edad: 5 a침os</div>
                    <div class="petBreed">Raza: Golden</div>
                    

                </div>
            </div>


            <div class="page-content">

                <div class="records table-responsive">
                    <div class="petRequest">
                        <img src="./assets/img/feed/dogFeed.png" alt="Foto de Mascota" class="petPhoto">
                        <span class="petName">Hannah</span>
                        <span class="las la-eye viewIcon" id="openModal"></span>
                        <button class="las la-check acceptButton"></button>
                        <button class="las la-times denyButton"></button>
                    </div>
                </div>

            </div>

        </main>

    </div>

    <script>
        let currentImageIndex = 0;
const images = document.querySelectorAll('.carousel-images img');

function changeImage(step) {
    images[currentImageIndex].style.display = 'none';
    currentImageIndex = (currentImageIndex + step + images.length) % images.length;
    images[currentImageIndex].style.display = 'block';
}

// Inicializa el carrusel mostrando la primera imagen
changeImage(0);

        document.addEventListener('DOMContentLoaded', function() {
    var petInfoModal = document.getElementById("petInfoModal");
    var openModal = document.getElementById("openModal");
    var closePetModal = document.getElementById("closePetModal");

    // Funci칩n para abrir el modal
    if (openModal) {
        openModal.addEventListener('click', function() {
            petInfoModal.style.display = "block";
        });
    }

    // Funci칩n para cerrar el modal
    if (closePetModal) {
        closePetModal.addEventListener('click', function() {
            petInfoModal.style.display = "none";
        });
    }

    // Cierra el modal si se hace clic fuera de su contenido
    window.addEventListener('click', function(event) {
        if (event.target == petInfoModal) {
            petInfoModal.style.display = "none";
        }
    });
});
    </script>
    <script src="../adminModal.js"></script>

</body>

</html>