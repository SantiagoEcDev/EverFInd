    <!-- Main Content -->
    <div class="content">
    
        <!-- Navbar -->
        <nav>
            <i class='bx bx-menu'></i>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Search...">
                    <button class="search-btn" type="submit"><i class='bx bx-search'></i></button>
                </div>
            </form>
            <input type="checkbox" id="theme-toggle" hidden>
            <label for="theme-toggle" class="theme-toggle"></label>
            <a href="#" class="notif">
                <i class='bx bx-bell'></i>
                <span class="count">12</span>
            </a>
            <a href="#" class="profile">
                <img src="images/logo.png">
            </a>
        </nav>

        <!-- End of Navbar -->

        
        <main>
            <div class="header">
                <div class="left">
                    <h1>My pets</h1>
                    <ul class="breadcrumb">
                        <li><a href="#">
                                Home
                            </a></li>
                        /
                        <li><a href="#" class="active">Give up for adoption</a></li>
                    </ul>
                </div>
            </div>  

            <div class="bottom-data">
                <div class="orders">
                    <div class="header">
                        <i class='bx bx-calendar-check'></i>
                        <h3>Pets Status</h3>
                        <i class='bx bx-filter'></i>
                        <i class='bx bx-search'></i>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>Pet Name</th>
                                <th>Order Date</th>
                                <th>Status</th>
                                <th>Edit</th>
                                <th>Delete</th>

                            </tr>
                        </thead>
                        <tbody>
                            <% pets.reverse().forEach(function(pet) { %>
                                <tr>
                                    <td>
                                        <img src="images/profile-1.jpg">
                                        <p><%= pet.name %></p>
                                    </td>
                                    <td><%= pet.createdAt.toLocaleDateString('es-ES', { day: '2-digit', month: '2-digit', year: '2-digit' }) %></td>
                                    <td><span class="status completed">Completed</span></td>
                                    <td><span class="edit"><a href="/edit/<%= pet._id %>"><i class='bx bx-pencil'></i></a></span></td>
                                    <td><span class="delete"><a href="/delete/<%= pet._id %>" onclick="return confirm('¿Estás seguro de que deseas eliminar esta mascota?')"><i class='bx bx-trash'></i></a></span></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
                

                <!-- Reminders -->
                <div class="reminders">
                    <div class="header">
                        <i class='bx bx-plus'></i>
                        <h3>My Pets</h3>
                        <i class='bx bx-filter'></i>
                    </div>
                    <form action="/addPet" method="post">
                        <div class="addPet">
                            <label for="name">Nombre:</label>
                            <input type="text" id="name" name="name" required>
                        </div>
                      
                        <div class="addPet">
                            <label for="age">Edad:</label>
                            <input type="number" id="age" name="age" required>
                        </div>
                      
                        <div class="addPet">
                            <label for="type">Animal:</label>
                            <select id="type" name="type" required>
                                <option value="perro">Perro</option>
                                <option value="gato">Gato</option>
                            </select>
                        </div>
                      
                        <div class="addPet">
                            <label for="breed">Raza:</label>
                            <input type="text" id="breed" name="breed" required>
                        </div>
                    
                        <div class="addPet">
                            <label>¿Está perdido?</label>
                            <div class="radio-group">
                                <input type="radio" id="si" name="lost" value="si">
                                <label for="si">Sí</label>
                                <input type="radio" id="no" name="lost" value="no">
                                <label for="no">No</label>
                            </div>
                        </div>
                      
                        <div class="addPet">
                            <label for="description">Descripción:</label>
                            <textarea id="description" name="description" rows="4" required></textarea>
                        </div>
                      
                        <!-- Agrega otros campos si es necesario -->
                      
                        <button type="submit">Guardar Mascota</button>
                    </form>
                      
