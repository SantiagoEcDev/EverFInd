<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <title>EverFind admin</title>
    <link rel="stylesheet" href="./styles/admin.css">
    <link rel="stylesheet"
        href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
</head>

<body>

    <input type="checkbox" id="menu-toggle">
    <div class="sidebar">
        <div class="side-header">
            <h3>A<span>dmin</span></h3>
        </div>

        <div class="side-content">
            <div class="profile">
                <div class="profile-img bg-img" style="background-image: url(img/3.jpeg)"></div>
                <h4>Santiago Escobar</h4>
                <small>Administrador</small>
            </div>

            <div class="side-menu">
                <ul>
                    <li>
                        <a href="admin">
                            <span class="las la-home"></span>
                            <small>Inicio</small>
                        </a>
                    </li>
                    <li>
                        <a href="history">
                            <span class="las la-history"></span>
                            <small>Historial</small>
                        </a>
                    </li>
                    <li>
                        <a href="petitions">
                            <span class="las la-envelope"></span>
                            <small>Solicitudes</small>
                        </a>
                    </li>
                    <li>
                        <a href="pets" class="active">
                            <span class="las la-paw"></span>
                            <small>Mascotas</small>
                        </a>
                    </li>
                    <li>
                        <a href="logout">
                            <span class="las la-sign-out-alt"></span>
                            <small>Cerrar sesión</small>
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </div>

    <div class="main-content">

        <header>
            <div class="header-content">
                <label for="menu-toggle">
                    <span class="las la-bars"></span>
                </label>

                <div class="header-menu">

                    <div class="notify-icon">
                        <span class="las la-envelope" id="mailIcon"></span>
                        <span class="notify" id="mailCount">4</span>
                    </div>

                    <div class="notify-icon">
                        <span class="las la-bell" id="notificationIcon"></span>
                        <span class="notify" id="notificationCount">3</span>
                    </div>

                    <div class="user">
                        <div class="bg-img" style="background-image: url(./assets/img/feed/dogFeed.png)"></div>
                    </div>
                </div>
            </div>
        </header>


        <main>

            <div class="page-header">
                <h1>Mascotas subidas</h1>
                <small>Inicio / Mascotas</small>
            </div>

            <div class="page-content">

                <div class="analytics">

                    <% pets.forEach((pet) => { %>
                        <div class="pet-card">
                          <div class="pet-image" style="background-image: url('<%= pet.imagePath %>');"></div>
                          <div class="pet-info">
                            <h3 class="pet-name"><%= pet.name %></h3>
                            <p class="pet-details">Edad: <%= pet.age %> años</p>
                            <p class="pet-details">Raza: <%= pet.breed %></p>
                          </div>
                        </div>
                      <% }); %>
                </div>
                    

            </div>

        </main>

    </div>
    <script>
        document.getElementById("iconTrigger").addEventListener("click", function() {
        var overflowMenu = document.getElementById("overflowMenu");
        overflowMenu.style.display = overflowMenu.style.display === "block" ? "none" : "block";
    });

    // Opcional: Cerrar el menú si se hace clic fuera de él
    window.onclick = function(event) {
        if (!event.target.matches('#iconTrigger')) {
            var dropdowns = document.getElementsByClassName("overflow-menu");
            for (var i = 0; i < dropdowns.length; i++) {
                var openDropdown = dropdowns[i];
                if (openDropdown.style.display === "block") {
                    openDropdown.style.display = "none";
                }
            }
        }
    }
    </script>

    <script src="../adminModal.js"></script>

</body>

</html>