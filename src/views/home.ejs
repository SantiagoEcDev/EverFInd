<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://kit.fontawesome.com/fd378db718.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="./styles/home.css">
    <link rel="icon" href="./assets/img/index/logo-removebg-preview.png" type="image/png">

    <title>Home</title>
</head>

<body>

    <script src="/socket.io/socket.io.js"></script>

    <!-- Sidebar -->
    <div class="sidebar">
        <a href="#" class="logo">
            <i class='bx bx-bone'></i>
            <div class="logo-name"><span>Ever</span>Find</div>
        </a>
        <ul class="side-menu">
            <li class="active"><a href="home"><i class='bx bx-heart'></i>Adoptar</a></li>
            <li><a href="giveto"><i class='bx bx-send'></i>Dar en adopción</a></li>
            <li><a href="requests"><i class='bx bx-file'></i>Solicitudes</a></li>
            <li><a href="profile"><i class='bx bx-user'></i>Perfil</a></li>
            <!-- <li><a href="#"><i class='bx bx-cog'></i>Settings</a></li> -->
        </ul>
        <ul class="side-menu">
            <li>
                <a href="/logout" class="logout">
                    <i class='bx bx-log-out-circle'></i>
                    Cerrar sesión
                </a>
            </li>
        </ul>
    </div>
    <!-- End of Sidebar -->

    <!-- Main Content -->
    <div class="content">
        <!-- Navbar -->
        <nav>
            <i class='bx bx-menu'></i>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Search...">
                    <button class="search-btn" type="submit"><i class='bx bx-search'></i></button>
                </div>
            </form>
            <input type="checkbox" id="theme-toggle" hidden>
            <label for="theme-toggle" class="theme-toggle"></label>
            <a href="#" class="notif" onclick="toggleNotifi()">
                <i class='bx bx-bell'></i>
                <span class="count">12</span>
            </a>
            <a href="#" class="profile" >
                <img src="images/logo.png">
            </a>
            <div class="notifi-box" id="box">
                <h2>Notificaciones <span>17</span></h2>
                 <div class="notifi-item">
                    <img src="img/avatar1.png" alt="img">
                    <div class="text">
                       <h4>Elias Abdurrahman</h4>
                       <p>@lorem ipsum dolor sit amet</p>
                    </div> 
                </div>
                
            </div>
        </nav>

        <!-- End of Navbar -->

        <main>
            <div class="header">
                <div class="left">
                    <h1>Inicio</h1>
                    <ul class="breadcrumb">
                        <li><a href="#">
                                Mascotas
                            </a></li>
                        /
                        <li><a href="#" class="active">Adoptar</a></li>
                    </ul>
                </div>
            </div>

            <!-- Insights -->
            <ul class="insights">
                <li>
                    <i class='bx bxs-dog'></i>
                    <span class="info">
                        <h3>
                            Perros
                        </h3>
                        <p><%= dogCount %></p>
                    </span>
                </li>
                <li><i class='bx bxs-cat'></i>
                    <span class="info">
                        <h3>
                            Gatos
                        </h3>
                        <p><%= catCount %></p>
                    </span>
                </li>
                <!-- <li><i class='bx bx-line-chart'></i>
                        <span class="info">
                            <h3>
                                14,721
                            </h3>
                            <p>Searches</p>
                        </span>
                    </li>
                    <li><i class='bx bx-dollar-circle'></i>
                        <span class="info">
                            <h3>
                                $6,742
                            </h3>
                            <p>Total Sales</p>
                        </span>
                    </li> -->
            </ul>
            <!-- End of Insights -->

            <div class="bottom-data">
                <div class="orders">
                    <div class="header">
                        <i class='bx bx-paw'></i>
                        <h3>Mascotas disponibles</h3>
                        <i class='bx bx-filter'></i>
                        <i class='bx bx-search'></i>
                    </div>

                    <div class="pets-available">
                        <% pets.forEach(function(pet, index) { %>
                          <div class="pet-container">
                            <article class="pet-view">
                              <div class="pet-background">
                                <img src="<%= pet.imagePath %>" alt="Foto de la Mascota <%= index %>">
                              </div>
                              <div class="pet-info">
                                <div class="pet-info-column">
                                  <div class="name-gender">
                                    <div class="name">
                                      <h2 style="color: black;"><%= pet.name %></h2>
                                    </div>
                                  </div>
                                  <div class="age">
                                    <p>Edad: <%= pet.age %> años</p>
                                  </div>
                                  <div class="age">
                                    <p><%= pet.type %></p>
                                  </div>
                                  <div class="more">
                                    <!-- Botón para abrir el modal -->
                                    <button class="open-modal-btn btn-more" data-index="<%= index %>">Información</button>
                                  </div>
                                </div>
                              </div>
                            </article>
                          </div>
                        <% }); %>
                      </div>
                      
                      <!-- Modales para todas las mascotas -->
                      <% pets.forEach(function(pet, index) { %>
                        <div id="modal<%= index %>" class="modal">
                          <div class="modal-content">
                            <!-- Contenido del modal para la mascota actual -->
                            <div class="modal-left">
                                <img src="<%= pet.imagePath %>" alt="Foto de la Mascota <%= index %>">
                            </div>
                            <div class="modal-right">
                                <h2><%= pet.name %></h2>
                                <p>Edad: <%= pet.age %> años</p>
                                <p>Raza: <%= pet.breed %></p>
                                <p>Estado: <%= pet.status %></p>
                                <p>Dueño: <%= pet.owner %></p>
                                <p>Descripción: <%= pet.description %></p>

                                <!-- ... Otros detalles de la mascota ... -->
                            </div>

                            <!-- ... Otros detalles de la mascota ... -->
                            <!-- Botón para cerrar el modal -->
                            <div class="button-container">
                                <!-- Botones debajo de la descripción -->
                                <button class="close-modal-btn back" data-index="<%= index %>"><i class="fa-solid fa-arrow-left" style="color: #ffffff;"></i> Cerrar</button>
                                <button id="aplicarBtn"  data-index="<%= index %>" data-postulante-id="<%= pet.owner %>" class="green-button">Solicitar <i class="fa-solid fa-plus"></i></button>
                            </div>
                          </div>
                        </div>
                      <% }); %>
                </div>

        </main>

    </div>

    
    <script src="dashboard.js"></script>
</body>

</html>